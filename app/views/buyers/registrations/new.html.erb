<% content_for :title, "Sign Up" %>

<!-- Page Title -->
<h2 class="text-center mb-4 text-dark">Create Your Account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signup" }) do |f| %>
  <div class="container">
    <!-- Error Messages -->
    <%= render "buyers/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div class="mb-3">
      <%= f.label :email, class: "form-label text-secondary" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm" %>
    </div>

    <!-- Name Field -->
    <div class="mb-3">
      <%= f.label :name, class: "form-label text-secondary" %>
      <%= f.text_field :name, class: "form-control shadow-sm" %>
    </div>

    <!-- Address Field -->
    <div class="mb-3">
      <%= f.label :address, class: "form-label text-secondary" %>
      <%= f.text_field :address, class: "form-control shadow-sm" %>
    </div>

    <!-- Phone Number Field -->
    <div class="mb-3">
      <%= f.label :phone_number, class: "form-label text-secondary" %>
      <%= f.text_field :phone_number, class: "form-control shadow-sm" %>
    </div>

    <!-- Password Field -->
    <div class="mb-3">
      <%= f.label :password, class: "form-label text-secondary" %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted">(Minimum <%= @minimum_password_length %> characters)</small>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow-sm" %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label text-secondary" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow-sm" %>
    </div>

    <!-- Submit Button -->
    <div class="mb-3">
      <%= f.submit "Sign Up", class: "btn btn-dark w-100 shadow-sm" %>
    </div>
  </div>
<% end %>

<!-- Links (optional for Devise) -->
<%= render "buyers/shared/links" %>
