<h2 class="text-center mb-4">Enter Your Shipping Address</h2>

<%= form_with model: @order, method: :post, class: "needs-validation" do |f| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        
        <div class="mb-3">
          <%= f.label :address, "Address", class: "form-label" %>
          <%= f.text_area :address, rows: 2, class: "form-control shadow-sm", required: true, placeholder: "Enter your address" %>
          <div class="invalid-feedback">
            Please provide a valid address.
          </div>
        </div>
        
        <div class="mb-3">
          <%= f.label :city, "City", class: "form-label" %>
          <%= f.text_field :city, class: "form-control shadow-sm", required: true, placeholder: "Enter your city" %>
          <div class="invalid-feedback">
            City is required.
          </div>
        </div>
        
        <div class="mb-3">
          <%= f.label :zipcode, "Zip Code", class: "form-label" %>
          <%= f.text_field :zipcode, class: "form-control shadow-sm", required: true, placeholder: "Enter your zip code" %>
          <div class="invalid-feedback">
            Please provide a valid zip code.
          </div>
        </div>
        
        <div class="d-grid gap-2">
          <%= f.submit "Place Order", class: "btn btn-primary btn-lg" %>
        </div>
        
      </div>
    </div>
  </div>
<% end %>

<script>
  (function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms)
      .forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
  })()
</script>
